<UserControl x:Class="Comqueror.Views.MessageLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Comqueror.Views"
             xmlns:viewModels="clr-namespace:Comqueror.ViewModels"
             xmlns:models="clr-namespace:Comqueror.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:MessageLogViewModel/>
    </UserControl.DataContext>
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Messages}" CanUserAddRows="False">
            <DataGrid.Resources>
                <local:DatetimeTemplateSelector x:Key="DatetimeTemplateSelector"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sender" Binding="{Binding MessageMode}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
