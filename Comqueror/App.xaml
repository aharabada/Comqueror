<Application x:Class="Comqueror.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Comqueror"
             xmlns:viewModels="clr-namespace:Comqueror.ViewModels"
             xmlns:util="clr-namespace:Comqueror.Utility"
             Startup="Application_Startup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="CascadiaMono">pack://application:,,,/Fonts/#Cascadia Mono, Consolas</FontFamily>
            <viewModels:MainWindowViewModel x:Key="MainViewModel"/>
            <util:EnumToStringConverter x:Key="EnumToStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
